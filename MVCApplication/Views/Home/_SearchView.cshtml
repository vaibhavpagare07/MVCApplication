@model System.Collections.Generic.List<MVCApplication.Models.SubmissionModel>

<html>

<head>
    <title>

    </title>

    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }
    </style>
</head>


<body>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">
                <span class="glyphicon glyphicon-th-list"></span>&nbsp;Employee Details
            </h2>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <h1> @ViewBag.Message  </h1>
    }
    else
    {
        foreach (var ele in Model)
        {

            <table>
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Salary</th>
                    <th>Department Name</th>
                </tr>
                <tr>
                    <td>
                        @ele.Name
                    </td>
                    <td>
                        @ele.Gender
                    </td>
                    <td>
                        @ele.Salary
                    </td>
                    <td>
                        @ele.Department
                    </td>
                </tr>
            </table>
        }
    }
</body>
</html>

<div class="panel-footer">
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-5">
            <a href="@Url.Action("Search", "Home")" class="btn btn-default" title="Search New Employee">
                <span class="glyphicon glyphicon-search"></span>
                Search New Employee
            </a>
            <a href="@Url.Action( "Index", "Home" )" class="btn btn-default" title="Cancel" tabindex="3"><span class="glyphicon glyphicon-remove"></span>&nbsp;Cancel</a>
        </div>
    </div>
</div>