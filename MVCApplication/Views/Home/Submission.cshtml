@model MVCApplication.Models.SubmissionModel

@{
    ViewBag.Title = "Employee Submission";
}


<h2>Submission</h2>

@using (Html.BeginForm("Submission", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "SubmitForm" }))
{
    <div class="panel-body">
        @*@Html.ValidationSummary("Please correct following errors and try again", new { @class = "alert alert-danger" })*@
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.ID, null, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.ID, new { @class = "form-control", tabindex = "1", placeholder = "Employee ID" })
                    @Html.ValidationMessageFor(model => model.ID)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Name, null, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", tabindex = "2", placeholder = "Employee Name" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Gender, null, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-6">
                    @Html.RadioButtonFor(model => model.Gender, "Male") Male
                    @Html.RadioButtonFor(model => model.Gender, "Female") Female
                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Salary, null, new { @class = "col-xs-2 control-label" })
                <div class="col-xs-6">
                    @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", tabindex = "3", placeholder = "Salary" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div>
                @Html.LabelFor(model => model.Department, "Department", new { @class = "col-xs-2 control-label" })
                <div class="col-xs-6">

                    @Html.DropDownListFor(x => x.Department, new List<SelectListItem>   
                     {
                        new SelectListItem() {Text = "IT", Value="1"},
                        new SelectListItem() {Text = "Payrol", Value="2"},
                        new SelectListItem() {Text = "HR", Value="3"},
                        new SelectListItem() {Text = "Other Department", Value="4"}
                     })

                    @Html.ValidationMessageFor(model => model.Department)
                </div>
            </div>
        </div>

    </div>
    <div class="panel-footer">
        <div class="form-group">

            <button type="submit" class="btn btn-default active" title="Submit" tabindex="8"><span class="glyphicon glyphicon-ok"></span>&nbsp;Submit</button>
            <a href="@Url.Action( "Index", "Home" )" class="btn btn-default" title="Cancel" tabindex="9"><span class="glyphicon glyphicon-remove"></span>&nbsp;Cancel</a>

        </div>
    </div>

}
